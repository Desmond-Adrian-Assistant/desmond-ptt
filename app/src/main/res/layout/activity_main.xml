<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”· Desmond PTT"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walkie-Talkie for Desmond"
        android:textColor="#888888"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Auth Section -->
    <LinearLayout
        android:id="@+id/auth_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#222244"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“± Telegram Login"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        
        <TextView
            android:id="@+id/auth_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initializing..."
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />
        
        <EditText
            android:id="@+id/phone_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Phone (+1234567890)"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:background="#333355"
            android:padding="12dp"
            android:inputType="phone"
            android:visibility="gone" />
        
        <EditText
            android:id="@+id/code_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Code"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:background="#333355"
            android:padding="12dp"
            android:inputType="number"
            android:visibility="gone" />
        
        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:background="#333355"
            android:padding="12dp"
            android:inputType="textPassword"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="12dp"
            android:visibility="gone" />
        
    </LinearLayout>

    <ImageView
        android:id="@+id/hero_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_mic_large"
        android:background="@drawable/mic_button_background"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/auth_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:contentDescription="Microphone" />

    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tap below to start the floating PTT button"
        android:textColor="#AAAAAA"
        android:textSize="16sp"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/hero_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/toggle_button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Start Floating Button"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The button floats over other apps.\nHold to record, release to send."
        android:textColor="#666666"
        android:textSize="14sp"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/toggle_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Radial gradient shadow -->
    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/floating_button_shadow" />

    <!-- Actual button -->
    <ImageView
        android:id="@+id/floating_mic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_mic_large"
        android:background="@drawable/floating_button_bg"
        android:padding="16dp"
        android:contentDescription="Push to talk" />

</FrameLayout>
